<h1>Add Review to Restaurant <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content  %>
  <%= f.input :rating, collection: (0..5) %>
  <%= f.submit 'Add Review', class: 'btn btn-primary' %>
<% end %>

<br>

  <%= link_to restaurants_path do %>
    <button class="btn btn-primary"> Back to list</button>
  <% end %>
